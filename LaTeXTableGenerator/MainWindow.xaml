<Window x:Class="LaTeXTableGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LaTeXTableGenerator.UI.ViewModels"
        xmlns:converter="clr-namespace:LaTeXTableGenerator.UI.Converter"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:LaTeXTableGenerator.UI.Behaviors"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converter:DataRowViewConverter x:Key="DataRowViewConverter" />
        <DataTemplate x:Key="CellDataTemplate">
            <TextBlock Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                       Margin="5, 10"
                       Height="20"
                       VerticalAlignment="Center"
                       DataContext="{Binding
                RelativeSource={RelativeSource AncestorType=DataGridCell}, 
                Converter={StaticResource DataRowViewConverter}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBold}"
                                         Value="True">
                                <Setter Property="FontWeight"
                                        Value="Bold" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsItalic}"
                                         Value="True">
                                <Setter Property="FontStyle"
                                        Value="Italic" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </DataTemplate>
        <DataTemplate x:Key="EditCellDataTemplate">
            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     Margin="5, 10"
                     Height="20"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     DataContext="{Binding
                RelativeSource={RelativeSource AncestorType=DataGridCell}, 
                Converter={StaticResource DataRowViewConverter}}">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBold}"
                                         Value="True">
                                <Setter Property="FontWeight"
                                        Value="Bold" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsItalic}"
                                         Value="True">
                                <Setter Property="FontStyle"
                                        Value="Italic" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </DataTemplate>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Button Content="Load Table" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Left"/>
        </Grid>

        <Menu Grid.Row="1" Grid.Column="0">
            <MenuItem ToolTip="Add Row"
                      Command="{Binding TableViewModel.AddRowCommand}">
                <MenuItem.Icon>
                    <Image Source="pack://application:,,,/LaTeXTableGenerator;component/Resources/AddRow.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem ToolTip="Add Column">
                <MenuItem.Icon>
                    <Image Source="pack://application:,,,/LaTeXTableGenerator;component/Resources/AddColumn.png"/>
                </MenuItem.Icon>
                <MenuItem.Items>
                    <MenuItem ToolTip="Add a column to the left"
                              Header="To the left"
                              Command="{Binding TableViewModel.AddColumnLeftCommand}">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/LaTeXTableGenerator;component/Resources/AddColumnsToLeft.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem ToolTip="Add a column to the right"
                              Header="To the rights"
                              Command="{Binding TableViewModel.AddColumnRightCommand}">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/LaTeXTableGenerator;component/Resources/AddColumnsToRight.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem.Items>
            </MenuItem>
            <MenuItem ToolTip="Delete Row"
                      Command="{Binding TableViewModel.DeleteRowCommand}">
                <MenuItem.Icon>
                    <Image Source="pack://application:,,,/LaTeXTableGenerator;component/Resources/DeleteTableRow.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem ToolTip="Delete Column"
                      Command="{Binding TableViewModel.DeleteColumnCommand}">
                <MenuItem.Icon>
                    <Image Source="pack://application:,,,/LaTeXTableGenerator;component/Resources/DeleteColumn.png" />
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <DataGrid Grid.Row="2" Grid.Column="0"
                  ItemsSource="{Binding TableViewModel.TableItemsSource}"
                  Style="{StaticResource DataGridStyle}"
                  AutoGeneratingColumn="DataGrid_OnAutoGeneratingColumn"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  SelectionMode="Extended"
                  SelectionUnit="Cell">
            <b:Interaction.Behaviors>
                <behaviors:MultiSelectBehavior SelectedItems="{Binding TableViewModel.SelectedCells, Mode=TwoWay}"/>
            </b:Interaction.Behaviors> 
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem IsChecked="{Binding TableViewModel.ContextMenuBoldChecked}"
                              IsCheckable="True">
                        <MenuItem.Header>
                            <TextBlock Text="Bold"
                                       FontWeight="Bold"/>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem IsChecked="{Binding TableViewModel.ContextMenuItalicChecked}"
                              IsCheckable="True">
                        <MenuItem.Header>
                            <TextBlock Text="Italic" FontStyle="Italic"/>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <TextBox IsReadOnly="True" 
                 Grid.Column="1" 
                 Grid.Row="2"
                 Text="{Binding OutputViewModel.Code}" 
                 FontFamily="Consolas" 
                 Margin="10"/>
    </Grid>
</Window>
